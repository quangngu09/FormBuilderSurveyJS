// tsconfig.build-types.json
{
    "compilerOptions": {
        "outDir": "./build/types",
        "declaration": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "vite/client",
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ],
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.cy.ts",
        "**/*.spec.ts",
        "**/__tests__/**/*"
    ]
}